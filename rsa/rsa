#!/usr/bin/env python3
import sys
from factor_helpers import factorize  # Assuming factor_helpers.py has the necessary prime factorization functions

def process_single_number(filename):
    """ Process a single number from the file and factorize it into two primes """
    with open(filename, 'r') as file:
        number = file.read().strip()
        if number.isdigit():
            n = int(number)
            p, q = factorize(n, method='advanced')  # Use the 'advanced' method for prime factorization
            print(f"{n}={p}*{q}")
        else:
            print("File does not contain a valid number.")

if __name__ == "__main__":
    if len(sys.argv) != 2:
        print("Usage: rsa <file>")
        sys.exit(1)
    filename = sys.argv[1]
    process_single_number(filename)
