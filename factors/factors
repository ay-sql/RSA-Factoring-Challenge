#!/usr/bin/env python3
import sys

def factorize(n):
    """ Factorize a given natural number n into two factors p and q """
    if n % 2 == 0:  # Check if n is even
        return 2, n // 2
    p = 3
    while p * p <= n:
        if n % p == 0:
            return p, n // p
        p += 2
    return n, 1  # Return n and 1 if n is prime

def process_file(filename):
    """ Process each number in the file and print the factors """
    with open(filename, 'r') as file:
        for line in file:
            n = int(line.strip())
            p, q = factorize(n)
            print(f"{n}={p}*{q}")

if __name__ == "__main__":
    if len(sys.argv) != 2:
        print("Usage: factors <file>")
        sys.exit(1)
    filename = sys.argv[1]
    process_file(filename)

